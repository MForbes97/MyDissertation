{% extends 'page.twig' %}

{% block scripts %}
     <script src="{{fwurls.parsley}}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.3.11/parsley.remote.js"></script>
{% endblock scripts %}

{% block onload %}
    $('#regform').parsley()
{% endblock onload %}

{% block navigation %}
{% endblock navigation %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <section class="row" id="frontpage">
        <article class="ml-auto col-md-8 mr-auto">
            {% if regok is defined %}
                <h2>{{regok}}</h2>
                <p><a href="{{base}}/" class="btn btn-primary">Home Page</a></p>
            {% else %}
                <h1 class="jumbotron" id="registerbox">Register</h1>
                <form action="{{base}}/register" method="post" class="jumbotron" id="regform">
                    <div class="form-group">
                        <label for="un" class="control-label">User Name*</label>
                        <input type="text" id="un" name="login" placeholder="username" class="form-control" required="required"
                            data-parsley-trigger="change"  data-parsley-remote-reverse="false" data-parsley-remote="{{base}}/ajax.php"
                            data-parsley-remote-message="That user name is not available" data-parsley-type="alphanum"
                        />
                    </div>
                    <div class="form-group">
                        <label for="em" class="control-label">Email Adress*</label>
                        <input type="email" id="em" name="email" placeholder="john@smith.com" data-parsley-trigger="change" class="form-control" required="required"/>
                    </div>                    
{# Need to add function to store in database but hashed #}
                    <div class="form-group">
                        <label for="fn" class="control-label">Full Name*</label>
                        <input type="text" id="fn" name="fullname" placeholder="John Smith" class="form-control" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="pw" class="control-label">Password*</label>
                        <input type="password" id="pw" name="password" placeholder="***********" class="form-control" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="rpw" class="control-label">Repeat Password*</label>
                        <input type="password" id="rpw" name="repeat" placeholder="***********" class="form-control" required="required"
                            data-parsley-trigger="change" data-parsley-equalto="#pw"/>
                    </div>
{# Need to add function to store in database #}
                    <div class="form-group">
                        <label for="tn" class="control-label">Therapists Name</label>
                        <input type="text" id="tn" name="therapistname" placeholder="Required for referred patients" class="form-control"/>
                    </div>
{# Need to add function to store in database #}
                    <div class="form-group">
                        <label for="tc" class="control-label">Therapist Code</label>
                        <input type="text" id="tc" name="therapistcode" placeholder="Required to register as a therapist" class="form-control"/>
                    </div>
                    <p>* = Required field</p>
                    <button class="btn btn-primary" type="submit">Register</button>
                </form>
            {% endif %}
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}